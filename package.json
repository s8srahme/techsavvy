{
	"name": "techsavvy",
	"version": "1.0.0",
	"description": "Publishing platform built with React and Express",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/sbramd/techsavvy"
	},
	"main": "server/server.js",
	"license": "MIT",
	"keywords": [
		"node",
		"heroku",
		"express",
		"react",
		"mongo"
	],
	"scripts": {
		"postinstall": "npm install --prefix server && npm install --prefix client && npm run --prefix client build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"server/**/*.{js,json}": [
				"prettier --write",
				"git add"
			],
			"client/src/**/*.{js,jsx,json,css,scss}": [
				"prettier --write",
				"git add"
			]
		},
		"ignore": [
			"server/node_modules",
			"server/package-lock.json"
		]
	},
	"devDependencies": {
		"husky": "^1.3.1",
		"lint-staged": "^8.1.3",
		"prettier": "^1.16.4"
	}
}
